@model MyExams.ViewModels.SituationVM

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @*temporary solution - alignment middle*@
            <br />   <br />   <br />   <br />
            <br />

            <div class="col-md-6">
                @using (Html.BeginForm("Search", "StudentSituations", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()


                    <div class="situation-info searchSituation">
                        <h2>Situation for Student</h2>
                        <div class="form-horizontal">
                            <hr />
                            <div class="form-group">
                                @Html.LabelFor(model => model.StudentSituation.StudentId, "Student", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.StudentSituation.StudentId, Model.StudentSituation.StudentIdSelectList, "-- Select student --", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StudentSituation.StudentId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2 col-md-offset-2">
                                    <input type="submit" value="Calculate" class="btn btn-lg btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="col-md-6">
                <div class="situation-info searchSituation">
                    <h2>Situation for Promotion</h2>
                    @using (Html.BeginForm("Search2", "StudentSituations", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                @Html.LabelFor(model => model.PromotionStituation.Specialization, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.EnumDropDownListFor(model => model.PromotionStituation.Specialization, "-- Select specialization --", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PromotionStituation.Specialization, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PromotionStituation.YearOfStudy, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.EnumDropDownListFor(model => model.PromotionStituation.YearOfStudy, "-- Select year --", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PromotionStituation.YearOfStudy, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                                    <div class="form-group">
                                        <div class="col-md-2 col-md-offset-4">
                                            <input type="submit" value="Calculate" class="btn btn-lg btn-success" />
                                        </div>
                                    </div>

                    }

                </div>
                <br /><br />
            </div>

            <div class="resetForm text-center">

                @Html.ActionLink("Reset Form", "Search", "StudentSituations", null, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>


    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


